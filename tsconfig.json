{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 18",
  "include": ["src/**/*"],

  "compilerOptions": {
    "lib": ["es5"],
    "module": "commonjs",
    "target": "es5",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",

    "outDir": "lib"
  }
}